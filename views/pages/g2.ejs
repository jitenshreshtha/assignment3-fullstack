<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>G2 page</title>
    <style>
      .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 400px;
        margin: 1.5rem auto;
      }
      .form-container h2 {
        text-align: center;
        margin-bottom: 20px;
      }
      .form-container label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }
      .form-container input[type="text"],
      .form-container input[type="number"],
      .form-container input[type="date"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      .form-container button {
        width: 100%;
        padding: 12px;
        background-color: rgb(95, 88, 88);
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
      }
      .form-container button:hover {
        background-color: white;
        color: rgb(95, 88, 88);
      }
      .appointment-slots {
        margin-top: 20px;
      }
      .time-slot {
        margin: 5px;
        padding: 10px;
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        border-radius: 4px;
        cursor: pointer;
      }
      .time-slot.selected {
        background-color: #4CAF50;
        color: white;
      }
    </style>
  </head>
  <body>
    <%- include('../layouts/header');%>
    <div class="form-container">
      <h2>G2 Information Form</h2>
      <form action="/g2Post" method="POST">
        <label for="firstname">First Name</label>
        <input
          type="text"
          id="firstname"
          name="firstname"
          value="<%= user ? user.firstname : '' %>"
          required
        />

        <label for="lastname">Last Name</label>
        <input
          type="text"
          id="lastname"
          name="lastname"
          value="<%= user ? user.lastname : '' %>"
          required
        />

        <label for="license">License Number</label>
        <input
          type="text"
          id="license"
          name="license"
          value="<%= user ? user.license : '' %>"
          required
        />

        <label for="age">Age</label>
        <input
          type="number"
          id="age"
          name="age"
          min="16"
          value="<%= user ? user.age : '' %>"
          required
        />

        <label for="dob">Date of Birth</label>
        <input
          type="date"
          id="dob"
          name="dob"
          value="<%= user ? user.dob : '' %>"
          required
        />

        <h3>Car Information</h3>

        <label for="make">Make</label>
        <input
          type="text"
          id="make"
          name="cardetails[make]"
          value="<%= user && user.cardetails ? user.cardetails.make : '' %>"
          required
        />

        <label for="model">Model</label>
        <input
          type="text"
          id="model"
          name="cardetails[model]"
          value="<%= user && user.cardetails ? user.cardetails.model : '' %>"
          required
        />

        <label for="year">Year</label>
        <input
          type="number"
          id="year"
          name="cardetails[year]"
          min="1900"
          max="2099"
          value="<%= user && user.cardetails ? user.cardetails.year : '' %>"
          required
        />

        <label for="plate">Plate Number</label>
        <input
          type="text"
          id="plate"
          name="cardetails[plate]"
          value="<%= user && user.cardetails ? user.cardetails.plate : '' %>"
          required
        />

        <h3>Book Appointment</h3>
        <label for="appointmentDate">Select Date</label>
        <input
          type="date"
          id="appointmentDate"
          name="appointmentDate"
          required
          onchange="fetchTimeSlots(this.value)"
        />

        <div id="timeSlots" class="appointment-slots">
          <% if (appointments && appointments.length > 0) { %>
            <% appointments.forEach(slot => { %>
              <% if (slot.isTimeSlotAvailable) { %>
                <div class="time-slot" onclick="selectTimeSlot(this)" data-time="<%= slot.time %>">
                  <%= slot.time %>
                </div>
              <% } %>
            <% }) %>
          <% } %>
        </div>

        <input type="hidden" id="selectedTime" name="appointmentTime" />
        <button type="submit">Submit</button>
      </form>
    </div>
    <%- include('../layouts/footer')%>

    <script>
      async function fetchTimeSlots(date) {
        try {
          const response = await fetch(`/api/appointments/${date}`);
          const slots = await response.json();
          const timeSlotsDiv = document.getElementById('timeSlots');
          timeSlotsDiv.innerHTML = '';
          
          slots.forEach(slot => {
            if (slot.isTimeSlotAvailable) {
              const slotDiv = document.createElement('div');
              slotDiv.className = 'time-slot';
              slotDiv.onclick = function() { selectTimeSlot(this); };
              slotDiv.setAttribute('data-time', slot.time);
              slotDiv.textContent = slot.time;
              timeSlotsDiv.appendChild(slotDiv);
            }
          });
        } catch (error) {
          console.error('Error fetching time slots:', error);
        }
      }

      function selectTimeSlot(element) {
        document.querySelectorAll('.time-slot').forEach(slot => {
          slot.classList.remove('selected');
        });
        element.classList.add('selected');
        document.getElementById('selectedTime').value = element.getAttribute('data-time');
      }
    </script>
  </body>
</html>
